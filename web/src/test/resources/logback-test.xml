<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
     ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.jdbc" level="ERROR"/>
    <logger name="org.springframework.jdbc.datasource.init" level="ERROR"/>
    <logger name="org.springframework.security.access.vote" level="DEBUG"/>
    <logger name="org.springframework.data" level="ERROR"/>
    <logger name="org.hibernate" level="ERROR"/>
    <logger name="org.hibernate.SQL" level="INFO"/>
    <logger name="org.hibernate.type" level="ERROR"/>
    <logger name="org.apache.commons" level="ERROR"/>
    <logger name="ch.silviowangler.dox" level="INFO"/>
    <logger name="ch.silviowangler.dox.export" level="TRACE"/>
    <logger name="ch.silviowangler.dox.document" level="TRACE"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>